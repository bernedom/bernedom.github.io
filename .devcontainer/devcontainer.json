{
    "name": "jekyll-playground",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "forwardPorts": [
        4000
    ],
    "remoteUser": "builder",
    "customizations": {
        "vscode": {
            "extensions": [
                "mrmlnc.vscode-scss", // SCSS/Sass
                "redhat.vscode-yaml", // YAML
                "sissel.shopify-liquid" // Liquid
            ]
        }
    },
    "runArgs": [
        "--cpus=6",
        "--memory=6g"
    ]
}